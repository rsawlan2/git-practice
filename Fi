#!/usr/bin/env python3

try:
    import requests
except ImportError:
    import subprocess, sys
    print("[INFO] installing requests...")
    subprocess.check_call([sys.executable, "-m", "pip", "install", "requests"])
    import requests

import argparse
import os
import json
import datetime
import secrets
import string
import getpass
import re
import base64
import urllib3

urllib3.disable_warnings(urllib3.exceptions.InsecureRequestWarning)

RES_DIR = "resources"
HSM_FILE = os.path.join(RES_DIR, "hsm_mapping.json")
PW_STORE = os.path.join(RES_DIR, "user_passwords.json")
ROLE_RES_FILE = os.path.join(RES_DIR, "usermg_role_resources")
os.makedirs(RES_DIR, exist_ok=True)

FIXED_ROLE_NAME = "usermanagementrole"

ENV_USER_MAP = {
    "DEV": "svc_at48994_usrmgt",
    "TE1": "svc_at48993_usrmgt",
    "TE2": "svc_at48992_usrmgt",
    "PROD": "svc_at49008_usrmgt"
}


def load_hsm(hsm_id):
    if not os.path.exists(HSM_FILE):
        raise SystemExit(f"[ERROR] missing: {HSM_FILE}")
    with open(HSM_FILE, "r") as f:
        data = json.load(f)
    for h in data.get("hsms", []):
        if h.get("id") == hsm_id:
            return h
    raise SystemExit(f"[ERROR] HSM '{hsm_id}' not found")


def gen_pw(n=16):
    chars = string.ascii_letters + string.digits + "._-"
    return ''.join(secrets.choice(chars) for _ in range(n))


def save_pw(user, pw):
    data = {}
    if os.path.exists(PW_STORE):
        try:
            with open(PW_STORE, "r") as f:
                data = json.load(f)
        except:
            data = {}
    data[user] = {"password": pw, "created_at": datetime.datetime.utcnow().isoformat() + "Z"}
    tmp = PW_STORE + ".tmp"
    with open(tmp, "w") as f:
        json.dump(data, f, indent=2)
    os.replace(tmp, PW_STORE)
    try:
        os.chmod(PW_STORE, 0o600)
    except:
        pass


def detect_api_version(base_url):
    r = requests.get(f"{base_url}/api/lunasa", verify=False)
    text = r.text.lower()
    m = re.search(r"(\d+)", text)
    return m.group(1) if m else "10"


def create_session(base_url, username, password, api_version):
    token = base64.b64encode(f"{username}:{password}".encode()).decode()

    headers = {
        "Content-Type": f"application/vnd.safenetinc.lunasa+json;version={api_version}",
        "Authorization": f"Basic {token}"
    }

    r = requests.post(
        f"{base_url}/auth/session",
        headers=headers,
        verify=False
    )

    if r.status_code not in (200, 204):
        raise SystemExit(f"[ERROR] failed to establish session (status {r.status_code})")

    return r.cookies.get("SESSION_ID")


def ensure_role_exists(base_url, session_id, api_version):
    headers = {
        "Content-Type": f"application/vnd.safenetinc.lunasa+json;version={api_version}",
        "Cookie": f"SESSION_ID={session_id}"
    }

    payload = {"roleId": FIXED_ROLE_NAME, "fullName": FIXED_ROLE_NAME}

    requests.post(
        f"{base_url}/roles",
        headers=headers,
        json=payload,
        verify=False
    )


def upload_role_resources(base_url, session_id, api_version):
    if not os.path.exists(ROLE_RES_FILE):
        raise SystemExit(f"[ERROR] missing role resource file: {ROLE_RES_FILE}")

    with open(ROLE_RES_FILE, "rb") as f:
        data = f.read()

    headers = {
        "Content-Type": f"application/vnd.safenetinc.lunasa+octet-stream;version={api_version}",
        "Cookie": f"SESSION_ID={session_id}"
    }

    r = requests.put(
        f"{base_url}/roles/{FIXED_ROLE_NAME}/resources",
        headers=headers,
        data=data,
        verify=False
    )

    if r.status_code not in (200, 204):
        raise SystemExit("[ERROR] failed to upload role resources")


def create_user(base_url, session_id, api_version, username, password):
    headers = {
        "Content-Type": f"application/vnd.safenetinc.lunasa+json;version={api_version}",
        "Cookie": f"SESSION_ID={session_id}"
    }

    payload = {"username": username, "password": password}

    r = requests.post(
        f"{base_url}/users",
        headers=headers,
        json=payload,
        verify=False
    )

    if r.status_code not in (200, 201, 204):
        raise SystemExit(f"[ERROR] user creation failed for '{username}'")

    save_pw(username, password)


def assign_role(base_url, session_id, api_version, username):
    headers = {
        "Content-Type": f"application/vnd.safenetinc.lunasa+json;version={api_version}",
        "Cookie": f"SESSION_ID={session_id}"
    }

    payload = {"username": username, "roleId": FIXED_ROLE_NAME}

    r = requests.post(
        f"{base_url}/users/{username}/roles",
        headers=headers,
        json=payload,
        verify=False
    )

    if r.status_code not in (200, 201, 204):
        raise SystemExit(f"[ERROR] couldn't assign role to '{username}'")


def main():
    parser = argparse.ArgumentParser(description="Luna HSM User Management (REST)")
    parser.add_argument("--hsm-id", required=True)
    parser.add_argument("--env", required=True, choices=["DEV","TE1","TE2","PROD"], type=str.upper)
    parser.add_argument("--apiuser", default="admin")
    parser.add_argument("--apipassword")
    parser.add_argument("--newuser")
    args = parser.parse_args()

    if args.newuser:
        new_user = args.newuser
        print(f"[INFO] using provided user: {new_user}")
    else:
        new_user = ENV_USER_MAP.get(args.env)
        if not new_user:
            raise SystemExit(f"[ERROR] invalid env '{args.env}'")
        print(f"[INFO] env {args.env}: user {new_user}")

    api_pw = args.apipassword or getpass.getpass(f"Password for {args.apiuser}@HSM: ")

    h = load_hsm(args.hsm_id)
    host = h.get("ipAddress") or h.get("host")
    base_url = f"https://{host}:8443"

    api_version = detect_api_version(base_url)
    session_id = create_session(base_url, args.apiuser, api_pw, api_version)

    ensure_role_exists(base_url, session_id, api_version)
    upload_role_resources(base_url, session_id, api_version)

    user_pw = gen_pw()
    create_user(base_url, session_id, api_version, new_user, user_pw)
    assign_role(base_url, session_id, api_version, new_user)

    print(f"[INFO] complete for HSM {args.hsm_id} ({args.env})")


if __name__ == "__main__":
    main()
